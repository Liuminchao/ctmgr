@charset "utf-8";

/* layout
--------------------------------------------------------------------*/
html {height:100%;}
body { font:12px/1 Arial,Tahoma,"MicroSoft YaHei","SimHei"; color:#666; text-align:center; zoom:1; overflow:hidden; position:relative; width: 100%;  height: 100%;}
p, b { line-height:20px; text-align:justify; text-justify:inter-ideograph; clear:both; overflow:hidden; margin:0;}
h1, h2{ font:normal 18px "MicroSoft YaHei","SimHei"; margin:0; padding:0;}
ul, ul li { margin:0; padding:0; list-style:none;}
h2{ font-size:16px;}
a { color:#666; text-decoration:none;}
a:hover{color:#ffa200; text-decoration:none;}
a:active { star:expression(this.onFocus=this.blur())!important;}
:focus { outline:0!important;}
.floatL { float:left;}
.floatR { float:right;}
img { max-width:none;}
#content { width:100%;}
.cmsContent { background:#fff; margin-bottom:-60px;}
.pagination ul { box-shadow:none;}


/* loginBox
--------------------------------------------------------------------*/
#loginBox { position:absolute; top:30%; left:0; z-index:50; width:100%; height:248px; border-top:1px #0b94b5 solid; border-bottom:1px #0b94b5 solid;}
.loginBoxBg { position:absolute; top:30%; left:0; z-index:50; width:100%; background:#000; filter:alpha(opacity=10); -moz-opacity:0.1; opacity:0.1; height:250px;}
#loginBox .loginMain { width:450px; margin:0 auto; text-align:left;}
#loginBox .loginMain .logo { margin-top:-40px; margin-bottom:40px; width:600px;}
#loginBox .loginMain .logo img { width:200px;}
#loginBox .loginMain .logo .logoTxt { margin-left:20px; font-size:24px; color:#fff; font-weight:bold;}

.form-horizontal .control-group { margin-bottom:10px;}
.form-horizontal .control-label { width:130px; font-size:12px; color:#fff;}
.form-horizontal .controls { margin-left:140px; *margin-left:0;}
#inputYzm { width:77px;}
.yzmImg { height:28px;}
.changeOne { color:#000000;}
.copyright { margin: auto; position: absolute; left: 0; right: 0; text-align:center; color:#000000; bottom:6%; width:450px;}
.info { color:#ffae00!important; line-height:14px;}
.infoBox { margin-bottom:0!important; position:absolute; top:10px;}

.error-msg{color:red;}
.all {width: 100%;  height: 100%;}
#login_sketch {position:relative; height:42%;width:100%;background-image: url("../../img/login/sketch_3.png");  background-size: 100% 100%;}
